@model MVCBasico.Models.Turno

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTurnera" class="control-label"></label>
                <input asp-for="IdTurnera" class="form-control" />
                <span asp-validation-for="IdTurnera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaTurno" class="control-label"></label>
                <input asp-for="FechaTurno" class="form-control" />
                <span asp-validation-for="FechaTurno" class="text-danger"></span>
            </div>
            @if (ViewBag.Mensaje != null)
            {
                <p>@ViewBag.Mensaje</p>
            }
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Volver al inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
